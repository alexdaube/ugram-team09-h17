<div class="contentProfile paddingProfile">
    <div class=" headerProfile">
        <div class="logoPaddingProfile">
        <div class="logoProfile">
            <button><img class="stlyeLogoProfile" src="<%- user.profilePictureUrl %>"></button>
        </div>
        </div>
        <div class="paddingNameProfile">
            <div class="borderLogoProfile">
                <h1 class="textNameProfile"><%- user.userName %></h1>
                <% if(user.userName === currentUser){ %>
                    <div class="paddingOptionProfile">
                        <a><button id="optionButton" class="styleOptionProfile coreSpriteEllipsis textOptionProfile"></button></a>
                    </div>
                <% } %>
            </div>
            <div class="paddingBioProfile">
                <h2 class="boldTextProfile"><%- user.firstName %> <%- user.lastName %></h2><br />
                <span>Inscription date: <%- user.inscriptionDate %></span>
            </div>
            <% if(user.userName === currentUser){ %>
                <div class="editButtonProfile"><a href="">
                    <a class="whiteBackground" href="#setting"><button class="styleButtonProfile colorButtonProfile sizeButtonProfile">Update profile</button></a>
                    &nbsp;&nbsp;
                    <a class="whiteBackground" href="#picture"><button class="styleButtonProfile colorAddButtonProfile sizeButtonProfile">Add picture</button></a>
                </div>
            <% } %>
        </div>
    </div>
    <div id="profile-pictures-list" class="imgProfile"></div>
    <div id="show-more-container" />
</div>

<div class="popupContent">
   <div id="popupCloseContent" class="divPopupContent">
    <div class="heightPopup">
        <div class="height2Popup">
            <ul>
                <li id="logoutButton" class="lineQuitPopup"><button class="buttonQuitPopup">Log out</button></li>
                <li id="deleteAccount" class="lineQuitPopup"><button class="buttonQuitPopup">Delete my account</button></li>
                <li id="confirmDelete" class="lineQuitPopup"><button class="deleteAccountColor">Click here to delete your account</button></li>
                <li class="lineQuitPopup"><button id="closeCancelButtonPopup" class="buttonQuitPopup">Cancel</button></li>
            </ul>
        </div>
    </div>
    <button id="closeExitButtonPopup" class="closeButtonPopup">Fermer</button>
   </div>
</div>