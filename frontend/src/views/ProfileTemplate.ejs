<main>
   <article class="contentProfile paddingProfile">
      <header class=" headerProfile">
         <div class="logoPaddingProfile">
            <div class="logoProfile">
               <button><img class="stlyeLogoProfile" src="/img/test2.jpg"></button>
            </div>
         </div>
         <div class="paddingNameProfile">
            <div class="borderLogoProfile">
               <h1 class="textNameProfile"><%- userProfile.userName %></h1>
               <div class="paddingOptionProfile"><button class="styleOptionProfile coreSpriteEllipsis textOptionProfile">Options</button></div>
                <button id="add-picture-button">Add picture</button>
            </div>
            <div class="editButtonProfile"><a href="#setting"><span><button class="styleButtonProfile colorButtonProfile sizeButtonProfile">Update profile</button></span></a></div>
             <div id="dialog" style="display:none">
                 <form class="pure-form pure-form-stacked" id="upload-file-form">
                     <label>User: </label> <input type="text" id="userId">
                     <label>Description:</label>
                     <input type="text" name="description" id="description">
                     <label for="upload-file-input">Upload your file:</label>
                     <input id="upload-file-input" type="file" name="file" accept="image/*">

                     <input id="submit-picture-button" class="pure-button" type="submit" id="submit" value="Submit">
                 </form>

                 <div id="result"></div>
             </div>
         </div>
      </header>
      <div class="paddingBioProfile">
         <h2 class="boldTextProfile"><%- userProfile.firstName %> <%- userProfile.lastName %></h2>
         <span><%- userProfile.email %> <%- userProfile.phoneNumber %> inscription date: <%- userProfile.inscriptionDate %></span>
         <a class="boldLinkProfile" href="" target="_blank">{website}</a>
      </div>
      <br />
      <ul class="statsProfile statsSizeProfile">
         <li class="paddingStatsProfile"><span class="fontStatsProfile blockStatsProfile">{number} Posts</span></li>
          <li class="paddingStatsProfile"><span class="fontStatsProfile blockStatsProfile">{number} Followers</span></li>
         <li class="paddingStatsProfile"><span class="fontStatsProfile blockStatsProfile">{number} Following</span></li>
      </ul>
      <div>
        <div class="imgProfile">
            <a class="showImgProfile" href="">
                <div class="displayImgProfile">
                    <div class="divImgProfile"><img class="pictureProfile" id="pImage_1" src="/img/test3.jpg"></div>
                </div>
            </a>
            <a class="showImgProfile" href="">
                <div class="displayImgProfile">
                    <div class="divImgProfile"><img class="pictureProfile" id="pImage_2" src="/img/test4.jpg"></div>
                </div>
            </a>
            <a class="showImgProfile" href="">
                <div class="displayImgProfile">
                    <div class="divImgProfile"><img class="pictureProfile" id="pImage_3" src="/img/test5.jpg"></div>
                </div>
            </a>
        </div>
         <div class="addMoreProfile"><a class="moreTextProfile" href="">Show more</a></div>
      </div>
   </article>
</main>